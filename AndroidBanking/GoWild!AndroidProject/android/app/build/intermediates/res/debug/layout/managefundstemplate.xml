<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.androidbanking.ManageFundsTemplate"
    android:id="@+id/extraRelative"
    android:background="#8e77f858">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/extraTop"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/spinnermfOptions"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_weight="1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:id="@+id/applyButton"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout6"
        android:baselineAligned="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/a">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="User"
                android:id="@+id/textView2"
                android:layout_alignTop="@+id/b"
                android:layout_alignRight="@+id/b"
                android:layout_alignEnd="@+id/b"
                android:layout_marginRight="0dp"
                android:layout_alignParentEnd="false"
                android:layout_weight="1"
                android:background="@drawable/bg"
                android:textSize="25dp"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize = "20dp"
                android:text="Selected User"
                android:id="@+id/selectUserTextView"
                android:background="@drawable/bg"
                android:layout_weight="7.30"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal" />

            <EditText
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:textSize = "15dp"
                android:id="@+id/hiddenText"
                android:layout_weight="1"
                android:background="@drawable/bg"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/b"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Account"
                android:id="@+id/accountText"
                android:background="@drawable/bg"
                android:gravity="center_horizontal"
                android:textSize="25dp" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="58dp"
                android:id="@+id/spinnerAccounts"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg"
                android:spinnerMode="dropdown"
                android:gravity="center_horizontal" />

            <Spinner
                android:layout_width="106dp"
                android:layout_height="36dp"
                android:id="@+id/spinnerAccounts2"
                android:gravity="clip_horizontal|clip_vertical"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"
                android:focusable="false"
                android:background="@drawable/bg"
                android:spinnerMode="dropdown" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/user2EditText"
        android:layout_toEndOf="@+id/user2EditText"
        android:layout_below="@+id/linearLayout6"
        android:baselineAligned="false"
        android:id="@+id/InvisibleLayout">

    </LinearLayout>

</RelativeLayout>
