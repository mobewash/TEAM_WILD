<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.androidbanking.TellerMain"
    android:background="#ff62ffb8">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff2f2f2f"
            android:baselineAligned="false"
            android:layout_weight="0.4">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="ManageFunds"
                android:id="@+id/ManageFundsB"
                android:textSize="20dp"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/bg1"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="ManageAccts"
                android:id="@+id/ManageAccounts"
                android:textSize="20dp"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/bg1"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:singleLine="false" />



        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="100dp"
            android:layout_weight="3">

           <TextView
                android:text="Find Customer:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/findUserTxt"
                android:textSize="25dp"
                android:textAlignment="gravity"
               android:layout_gravity="center|top"
               android:textColor="#ffff8f2b" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <AutoCompleteTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/autoCompleteTextView"
                    android:layout_weight="0.08"
                    android:layout_gravity="center|center_vertical|top"
                    android:gravity="center|center_vertical|center_horizontal"
                    android:textAlignment="center"
                    android:theme="@style/AppBaseTheme"
                    android:hint="Please Type User Name Here..."
                    android:singleLine="true"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
