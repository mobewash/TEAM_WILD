<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.androidbanking.SelectAccount">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/changeCredit"
        android:id="@+id/changeCredit"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignLeft="@+id/changeDebit"
        android:layout_alignStart="@+id/changeDebit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/changeDebit"
        android:id="@+id/changeDebit"
        android:layout_toEndOf="@+id/textView2"
        android:layout_below="@+id/changeCredit"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:id="@+id/button3"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/whichAccount"
        android:id="@+id/textView2"
        android:layout_marginBottom="57dp"
        android:layout_above="@+id/changeCredit"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/changeSavings"
        android:id="@+id/changeSavings"
        android:layout_below="@+id/changeDebit"
        android:layout_alignRight="@+id/changeDebit"
        android:layout_alignEnd="@+id/changeDebit"
        android:layout_alignLeft="@+id/changeDebit"
        android:layout_alignStart="@+id/changeDebit" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:src="@drawable/gowildthing"
        android:layout_toStartOf="@+id/button3"
        android:layout_alignRight="@+id/changeCredit"
        android:layout_alignEnd="@+id/changeCredit"
        android:layout_above="@+id/textView2" />

</RelativeLayout>
