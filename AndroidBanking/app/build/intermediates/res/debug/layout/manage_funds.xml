<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.androidbanking.ManageFunds">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What would you like to do?"
        android:id="@+id/textView3"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Debit"
        android:id="@+id/debitButton"
        android:layout_marginTop="68dp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/depositButton"
        android:layout_alignStart="@+id/depositButton"
        android:layout_alignRight="@+id/depositButton"
        android:layout_alignEnd="@+id/depositButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Credit"
        android:id="@+id/depositButton"
        android:layout_below="@+id/debitButton"
        android:layout_alignRight="@+id/debitButton"
        android:layout_alignEnd="@+id/debitButton"
        android:layout_alignLeft="@+id/debitButton"
        android:layout_alignStart="@+id/debitButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transfer"
        android:id="@+id/transferButton"
        android:layout_below="@+id/depositButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
