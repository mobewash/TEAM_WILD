<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidbanking"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.androidbanking.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.androidbanking.CreateAccount"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.androidbanking.HelloActivity"
            android:label="@string/title_activity_hello" >
        </activity>
        <activity
            android:name="com.example.androidbanking.LoginErrorActivity"
            android:label="@string/title_activity_login_error" >
        </activity>
        <activity
            android:name="com.example.androidbanking.ManageFunds"
            android:label="@string/title_activity_manage_funds" >
        </activity>
        <activity
            android:name="com.example.androidbanking.SelectAccount"
            android:label="@string/title_activity_change_funds" >
        </activity>
        <activity
            android:name="com.example.androidbanking.ChangeBalance"
            android:label="@string/title_activity_change_balance" >
        </activity>
        <activity
            android:name="com.example.androidbanking.CustomerMP"
            android:label="@string/title_activity_customer_mp" >
        </activity>
        <activity
            android:name="com.example.androidbanking.transferFunds"
            android:label="@string/title_activity_transfer_funds" >
        </activity>
    </application>

</manifest>